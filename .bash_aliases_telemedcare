#!/bin/bash

# ğŸš€ TeleMedCare V11 - Bash Aliases
# Source questo file con: source /home/user/webapp/.bash_aliases_telemedcare

# Directory shortcuts
alias tele="cd /home/user/webapp"
alias src="cd /home/user/webapp/src"
alias docs="cd /home/user/webapp && ls *.md"

# Git shortcuts
alias gs="cd /home/user/webapp && git status"
alias gp="cd /home/user/webapp && git pull origin \$(git branch --show-current)"
alias gps="cd /home/user/webapp && git push origin \$(git branch --show-current)"
alias gc="cd /home/user/webapp && git commit -m"
alias ga="cd /home/user/webapp && git add ."
alias glog="cd /home/user/webapp && git log --oneline --graph -20"
alias gbr="cd /home/user/webapp && git branch -a"

# Git workflows
alias gmain="cd /home/user/webapp && git checkout main"
alias gdev="cd /home/user/webapp && git checkout genspark_ai_developer"
alias gsync="cd /home/user/webapp && git fetch origin && git pull origin \$(git branch --show-current)"

# Development
alias dev="cd /home/user/webapp && npm run dev"
alias build="cd /home/user/webapp && npm run build"
alias test="cd /home/user/webapp && npm test"

# PM2 shortcuts
alias pm2status="pm2 status"
alias pm2logs="pm2 logs --nostream"
alias pm2restart="pm2 restart telemedcare"
alias pm2stop="pm2 stop telemedcare"
alias pm2start="cd /home/user/webapp && pm2 start ecosystem.config.cjs"

# Quick tests
alias test-email="cd /home/user/webapp && ./test_email_simple.sh"
alias test-workflow="cd /home/user/webapp && ./test_complete_workflow.py"

# Project info
alias info="cd /home/user/webapp && cat AMBIENTE_SVILUPPO_GITHUB.md | head -50"
alias branches="cd /home/user/webapp && git branch -a"
alias lastcommit="cd /home/user/webapp && git log -1"

# Git helper script
alias ghelp="cd /home/user/webapp && ./git-helper.sh"

# Quick status
alias status="cd /home/user/webapp && echo '=== Git Status ===' && git status --short && echo '' && echo '=== PM2 Status ===' && pm2 status && echo '' && echo '=== Branch ===' && git branch --show-current"

# Environment
alias env-check="cd /home/user/webapp && ls -la .env .dev.vars 2>/dev/null || echo 'Environment files not found'"

echo "âœ… TeleMedCare aliases loaded!"
echo "ğŸ“‹ Type 'ghelp' per helper interattivo"
echo "ğŸ“‹ Type 'status' per overview rapido"
